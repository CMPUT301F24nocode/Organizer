<resources>
    <style name="GenericText">
        <item name="android:fontFamily">@font/airbnbcereal_w_bk</item>
        <item name="android:textColor">@color/lucky_white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RoundedEditTextStyle">
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:padding">14dp</item>
        <item name="android:fontFamily">@font/airbnbcereal_w_bk</item>
        <item name="android:textColor">@color/lucky_grey</item>
        <item name="android:textColorHint">@color/lucky_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InactiveButton">
        <item name="android:backgroundTint">@color/lucky_uiEmphasis</item>
        <item name="android:fontFamily">@font/airbnbcereal_w_bk</item>
        <item name="android:textColor">@color/lucky_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ActiveButton">
        <item name="android:backgroundTint">@color/lucky_uiAccent</item>
        <item name="android:fontFamily">@font/airbnbcereal_w_bk</item>
        <item name="android:textColor">@color/lucky_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>